<div class="container" style="margin-top: 1rem;">
<div class="row gy-3">
{{#each .}}
  {{#if id}}

    <div class="card col-md-3">
      <img src="{{img_path}}" class="card-img-top" alt="blog-post">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{meta_text}}</p>
        <a href="#" class="btn btn-primary"
        onclick="location.href='http://10.0.0.5:8080/posts/{{id}}'">
        Go to post</a>
      </div>
    </div>

  {{/if}}
{{/each}}
</div>
</div>
